<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_mer_status"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.woniukeji.jianmerchant.activity.certification.MerStatusActivity">
    <RelativeLayout
        android:background="@color/app_bg"
        style="@style/title_bar_style">

        <ImageView
            android:id="@+id/img_back"
            android:src="@mipmap/icon_back"
            android:layout_width="32dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_height="32dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_marginLeft="23dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="审核状态"
            />


    </RelativeLayout>


    <ImageView
        android:id="@+id/img_jianguo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:src="@mipmap/auditimage"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tv_status"
        android:layout_below="@id/img_jianguo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在审核"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/tv_tips"
        android:layout_below="@id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="温馨提示：尊敬的用户我们的客服人员会在工作日的6小时内联系您，请保持电话畅通！"
        />

    <Button
        android:layout_below="@id/tv_tips"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/blue_bg"
        android:text="重新认证"
        android:textColor="@color/white"
        android:id="@+id/btn_next"/>
</RelativeLayout>
