<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content">
    <View
        android:background="#efefef"
        android:id="@+id/top_divider"
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <com.woniukeji.jianmerchant.widget.CircleImageView
        android:layout_below="@id/top_divider"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="22dp"
        android:id="@+id/circleimg_head"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_toRightOf="@id/circleimg_head"
        android:layout_alignTop="@id/circleimg_head"
        android:layout_alignBottom="@id/circleimg_head"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="李猫猫"
                android:textSize="15dp"
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="12dp"
                android:text="女"
                android:id="@+id/img_sex"
                android:textColor="#ef8db5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:textSize="11dp"
            android:text="中央民族大学"
            android:layout_marginTop="10dp"
            android:textColor="#808080"
            android:id="@+id/tv_school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/gz"
                android:id="@+id/user_gezi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/gz"
                android:id="@+id/user_gezi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/gz"
                android:id="@+id/user_gezi3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/gz"
                android:id="@+id/user_gezi4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/gz"
                android:id="@+id/user_gezi5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_alignTop="@id/circleimg_head"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:textSize="12dp"
        android:textColor="#bcbcbc"
        android:id="@+id/tv_publish_date"
        android:text="2016-05-08 15:30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="7dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:id="@+id/midle_divider"
        android:background="#f3f3f3"
        android:layout_below="@id/circleimg_head"
        android:layout_height="1dp"
        android:layout_width="match_parent" />
    <ImageView
        android:clickable="true"
        android:id="@+id/user_phone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_below="@id/tv_publish_date"
        android:layout_marginTop="20dp"
        android:background="@drawable/phone"
        android:layout_width="20dp"
        android:layout_height="20dp" />
    <ImageView
        android:id="@+id/fgx"
        android:layout_toLeftOf="@id/user_phone"
        android:layout_below="@id/tv_publish_date"
        android:layout_marginTop="13dp"
        android:layout_alignBottom="@id/circleimg_head"
        android:layout_marginRight="10dp"
        android:src="@drawable/fgx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:clickable="true"
        android:layout_marginRight="9dp"
        android:layout_alignTop="@id/user_phone"
        android:layout_toLeftOf="@id/fgx"
        android:src="@drawable/chat"
        android:id="@+id/user_talk"
        android:layout_width="20dp"
        android:layout_height="20dp" />
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_below="@id/midle_divider"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_toLeftOf="@id/btn_cancel"
            android:layout_marginRight="7dp"
            android:background="@drawable/btn_enroll_filter_selector"
            android:id="@+id/btn_confirm"
            android:layout_width="66dp"
            android:layout_height="25dp" />
        <Button
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/btn_refuse_filter_selector"
            android:id="@+id/btn_cancel"
            android:layout_width="66dp"
            android:layout_height="25dp" />

    </RelativeLayout>


</RelativeLayout>