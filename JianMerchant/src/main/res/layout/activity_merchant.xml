<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_personal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context="com.woniukeji.jianmerchant.activity.certification.PersonalActivity">
    <RelativeLayout
        android:background="@color/app_bg"
        style="@style/title_bar_style">

        <ImageView
            android:id="@+id/img_back"
            android:src="@mipmap/icon_back"
            android:layout_width="32dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_height="32dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:padding="8dp"
            android:layout_marginLeft="23dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="企业资料"
            />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        >
        <com.woniukeji.jianmerchant.widget.CircleImageView
            android:id="@+id/add_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/add_head"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="请上传企业logo"
            android:layout_marginTop="5dp"
            android:layout_below="@id/add_head"
            android:layout_centerHorizontal="true"

            />
    </RelativeLayout>



<TextView
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/gray1"
    android:layout_marginLeft="15dp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="企业名称:"
            android:textSize="16dp"
            android:gravity="center|right"
            android:minEms="4"
            />
        <EditText
            android:id="@+id/et_company_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:hint="请输入企业名称"
            android:layout_marginLeft="15dp"
            android:background="@color/transparent"
            android:textColorHint="#cccccc"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray1"
        android:layout_marginLeft="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="企业邮箱:"
            android:textSize="16dp"
            android:gravity="center|right"
            android:minEms="4"
            />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:hint="请输入企业邮箱"
            android:layout_marginLeft="15dp"
            android:background="@color/transparent"
            android:textColorHint="#cccccc"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray1"
        android:layout_marginLeft="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="所在省市:"
            android:textSize="16dp"
            android:gravity="center|right"
            android:minEms="4"
            />
        <TextView
            android:id="@+id/tv_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:hint="请选择城市"
            android:layout_marginLeft="15dp"
            android:background="@color/transparent"
            android:textColorHint="#cccccc"
            android:textColor="@color/black"
            android:gravity="center|left"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray1"
        android:layout_marginLeft="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="街区地址:"
            android:textSize="16dp"
            android:gravity="center|right"
            android:minEms="4"
            />
        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:hint="请输入详细地址"
            android:textColorHint="#cccccc"
            android:layout_marginLeft="15dp"
            android:background="@color/transparent"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="企业简介"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:id="@+id/gd"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="16dp"
        android:hint="请输入公司介绍，（可不填）"
        android:gravity="top"
        android:textColorHint="#cccccc"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/blue_bg"
       android:text="下一步"
        android:textColor="@color/white"
        android:id="@+id/btn_next"/>
</LinearLayout>
